<aura:component>
    <!-- attributes -->
    <aura:attribute name="mapMarkers" type="Object"/>
    <aura:attribute name="zoomLevel" type="Integer" />

    <!-- handlers-->
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>

    <!-- the map component -->
    <div id="id1">
    <lightning:map
            mapMarkers="{! v.mapMarkers }"
            zoomLevel="{!v.zoomLevel}"  />
    </div>
</aura:component>
